
public class TrippleDice extends Dice 
{

	Dice D1 = new Dice();
	Dice D2 = new Dice();
	Dice D3 = new Dice();
	
	@Override
	public int Throw ()
	{
		int avarage = 0;
		avarage = (D1.Throw() + D2.Throw() + D3.Throw()) / 3;
		System.out.println("The Avarage of the three dices are: " + avarage);
		
		return avarage;
	}
	
}
