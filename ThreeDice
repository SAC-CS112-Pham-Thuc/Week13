
public class ThreeDice 
{
	Dice D1 = new Dice();
	Dice D2 = new Dice();
	Dice D3 = new Dice();
	
	public int Throw()
	{
		int dice1 = D1.DiceValue();
		int dice2 = D2.DiceValue();
		int dice3 = D3.DiceValue();
		int avarage = 0;
		avarage = (dice1 + dice2 + dice3) / 3;
		System.out.println("The Avarage of the three dices are: " + avarage);
		
		return avarage;
	}
	
	
	
	
}
